<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <!-- Default Tooltip Template -->
        <Window name="DefaultTooltip" inherits="TooltipBase">
            <Size>
                <AbsPoint x="400" y="100" /> <!-- Increased the height to accommodate the additional text -->
            </Size>
            <Windows>
                <!-- Existing elements of the tooltip -->

                <!-- Description Label -->
                <Label name="AbilityTooltipDesc" font="font_chat_text" maxchars="512" wordwrap="true" autoresize="true"  sticky="true">
                    <Size>
                        <AbsPoint x="350" y="60" /> <!-- Adjusted the size to provide space for the ability ID -->
                    </Size>
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="$parent" />
                    </Anchors>
                    <Color r="255" g="204" b="102" a="255"/>
                </Label>

                <!-- Other elements... -->
            </Windows>
        </Window>

        <!-- Other window definitions... -->
    </Windows>
</Interface>
